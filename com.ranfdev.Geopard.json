{
  "app-id": "com.ranfdev.Geopard",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "geopard",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network",
    "--filesystem=xdg-download"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUST_LOG": "info"
    }
  },
  "modules": [
    {
      "name": "Geopard",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuildtype=release",
        "-Doffline=true"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ranfdev/Geopard/releases/download/v1.2.0/com.ranfdev.Geopard.tar.xz",
          "sha256": "7765e1d00759373014019ac18c0fb80a566d03e602998b21b7e10128370b9985",
          "x-checker-data": {
              "type": "json",
              "url": "https://api.github.com/repos/ranfdev/Geopard/releases/latest",
              "version-query": "",
              "url-query": ".assets[] | first | .browser_download_url"
          }
        }
      ]
    }
  ]
}
